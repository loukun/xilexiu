/* pages/photo/index.wxss */
.image-style{  
  position: absolute;   
  bottom: 240px;  
  right: 100px;
  z-index: -1;
}
.area-style{
  width:90%;
  height:500px;
  background:rgba(255,255,255,1);
  border-radius: 20px;
  box-shadow:10px 26px 45px rgba(136,136,136,0.15) 
}
.button {
  position:fixed;
  z-index:100;
  border-radius: 10rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.shadow{  
  position: absolute;width:375rpx;height:380rpx;top: 0;left: 0;  
  border-left-style: solid;border-left-color:#BFBFBF;
  border-right-style: solid;border-right-color:#BFBFBF;  
  border-top-style: solid;border-top-color:#BFBFBF;  
  border-bottom-style: solid;border-bottom-color:#BFBFBF;  
}
.button-blue {
  position:fixed;
  bottom: 50rpx;
  right: 225rpx;
  z-index:100;
  border-radius: 50rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-image:linear-gradient(135deg, #1F8AFF, #197CE9);
  box-shadow: 0 20rpx 20rpx -10rpx #1B88FF; 
  color: #FFF;
  font-size:40rpx;
  padding:0;
}
.animation{
  background: rgba(0,0,0,0.2); 
  z-index: 999;
  float: left;
  right: -100vh;
  width: 100%;
  height: 100%;
}
 .animation-content{
  width: 490rpx;
  height: 100%;
  background: #FFF;
  position: absolute;
  right: 0;
}
.sidebar {
  background:rgba(255,255,255,1);
  width:60rpx;
  height:80rpx;
  border-top-left-radius:20rpx;
  border-bottom-left-radius:20rpx;
  right: 490rpx;
}
.sidebar:after {
  content: " ";
  display: inline-block;
  height: 24rpx;
  width: 24rpx;
  border-width: 4rpx 4rpx 0 0; 
  border-color: #878787;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: relative;
  margin-top: 28rpx;
  right: -14rpx;
}