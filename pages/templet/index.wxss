.area-style{
  background:rgba(255,255,255,1);
  border-radius: 40rpx;
  box-shadow:20rpx 20rpx 40rpx rgba(136,136,136,0.15)
}
.inner-border {
  border:1px solid #F1F1F1;
  margin:40rpx 40rpx 20rpx 40rpx;
  position:absolute;
}
.text-title{
  width:100%;
  height:36rpx; 
  font-size:36rpx;
  color:rgba(120,120,120,1);
  line-height:0px;
}
.text-type{
  width:100%;
  height:36rpx; 
  font-size:36rpx;
  color:rgba(110,172,37,1);
  line-height:0px;
}
.text-number{
  height:118rpx; 
  font-size:80rpx; 
  color:rgba(255,200,69,1);
  line-height:0px;
}
.text-unit{
  height:118rpx; 
  font-size:40rpx; 
  color:rgba(255,200,69,1);
  line-height:0px;
}
.point-selected{
  width:70rpx;
  height:15rpx; 
  background:rgba(244,108,14,1);
  border-radius: 10rpx;
}
.point-unselect{
  width:70rpx;
  height:15rpx; 
  background:rgba(178,178,178,1);
  border-radius: 10rpx;
}
.button-round {
  position:absolute;
  bottom: 20rpx;
  right: 50rpx;
  z-index:100;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  background-image:linear-gradient(135deg, #FA8534, #E6660E);
  box-shadow: 0 20rpx 20rpx -10rpx #F46C0E;
  color: #fff;
  font-size:40rpx;
  padding:0;
}
