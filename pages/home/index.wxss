/* pages/home/index.wxss */
page{
  background: #4A4A4A;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.circle1{
  width: 130rpx;
  height: 130rpx;
  box-sizing: border-box;
  border: 5rpx solid #FFFFFF;
  border-radius: 50%;
  }
.circle2{
  width: 110rpx;
  height: 110rpx;
  box-sizing: border-box;
  border: 10rpx solid #FFFFFF;
  border-radius: 50%;
  }
.video-style {
  position: fixed;
  width: 730rpx;
  height:430rpx;
  border-radius: 20rpx;
  margin-top: 200rpx;
  margin-left: 10rpx;
  margin-right:10rpx;
}
 .cell-style {
  position: fixed;
  border-radius: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 730rpx;
  height: 160rpx;
}

.controls {
  position: relative;
  width: 730rpx;
  height:430rpx;
  display: flex;
}
.play,.pause {
  flex: 1;
  height: 100%;
}
